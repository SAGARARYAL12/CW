pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDS = credentials('Docker')  // Make sure the correct credentials ID is here
    }
    stages {
        stage('Docker Image Build') {
            steps {
                sh 'docker build -f Dockerfile --tag sug2004/cw2-server:1.0 .'
            }
        }
        stage('Test Docker Image') {
            steps {
                sh 'docker image inspect sug2004/cw2-server:1.0'
                sh 'docker run --name e-container -d -p 8088:8080 sug2004/cw2-server:1.0'
                sh 'curl http://localhost:8088'  // Ensure the service is running
                sh 'docker stop e-container'
                sh 'docker rm e-container'
            }
        }
        stage('DockerHub Login') {
            steps {
                sh 'echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin'
            }
        }
        stage('DockerHub Image Push') {
            steps {
                sh 'docker push sug2004/cw2-server:1.0'
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['my-ssh-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@3.85.134.120 <<EOF
                    
                    ansible-playbook deploy.yml \
                        -e image_name=sug2004/cw2-server:1.0 \
                        -e replicas=3
                    
		    ansible-playbook scaledeploy.yml \
			-e replicas=3
		    
                     '''
                }
            }
        }
    }
}
